<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.login2faapp.controller.ControllerRegistrationView">
   <children>
      <Label alignment="CENTER" layoutY="25.0" prefHeight="17.0" prefWidth="520.0" text="Registration">
         <font>
            <Font name="Verdana Bold" size="31.0" />
         </font>
      </Label>
      <TextField fx:id="nameTextField" layoutX="159.0" layoutY="101.0" prefHeight="25.0" prefWidth="207.0" promptText="First name" />
      <TextField fx:id="registrationUsernameTextField" layoutX="159.0" layoutY="152.0" prefHeight="25.0" prefWidth="207.0" promptText="Username / e-mail" />
      <Label alignment="CENTER_RIGHT" layoutX="104.0" layoutY="157.0" text="E-mail">
         <font>
            <Font name="Verdana" size="12.0" />
         </font>
      </Label>
      <Label alignment="CENTER_RIGHT" layoutX="85.0" layoutY="204.0" text="Password">
         <font>
            <Font name="Verdana" size="12.0" />
         </font>
      </Label>
      <Label alignment="CENTER_RIGHT" layoutX="34.0" layoutY="255.0" prefHeight="15.0" prefWidth="109.0" text="Repeat password">
         <font>
            <Font name="Verdana" size="12.0" />
         </font>
      </Label>
      <Label alignment="CENTER_RIGHT" layoutX="106.0" layoutY="106.0" text="Name">
         <font>
            <Font name="Verdana" size="12.0" />
         </font>
      </Label>
      <Button fx:id="registerButton" layoutX="159.0" layoutY="300.0" mnemonicParsing="false" onAction="#registerButtonOnAction" prefHeight="30.0" prefWidth="99.0" style="-fx-background-color: #23395D;" text="Register" textFill="WHITE">
         <font>
            <Font name="Verdana Bold" size="13.0" />
         </font>
         <effect>
            <DropShadow offsetX="6.0" />
         </effect>
      </Button>
      <Button fx:id="cancelRegistrationButton" layoutX="267.0" layoutY="300.0" mnemonicParsing="false" onAction="#cancelRegistrationButtonOnAction" prefHeight="30.0" prefWidth="99.0" style="-fx-background-color: #23395D;" text="Cancel" textFill="WHITE">
         <font>
            <Font name="Verdana Bold" size="13.0" />
         </font>
         <effect>
            <DropShadow offsetX="6.0" />
         </effect>
      </Button>
      <Label fx:id="registrationMessageLabel" alignment="CENTER" layoutX="-1.0" layoutY="73.0" prefHeight="18.0" prefWidth="520.0" textAlignment="CENTER" textFill="#f81d1d">
         <font>
            <Font name="Verdana" size="12.0" />
         </font>
      </Label>
      <PasswordField fx:id="registrationPasswordPasswordField" layoutX="159.0" layoutY="199.0" prefHeight="25.0" prefWidth="207.0" promptText="Password" />
      <PasswordField fx:id="repeatRegistrationPasswordPasswordField" layoutX="157.0" layoutY="250.0" prefHeight="25.0" prefWidth="207.0" promptText="Repeat password" />
   </children>
</AnchorPane>
